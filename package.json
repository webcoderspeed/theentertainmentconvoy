  "license": "ISC",
  "bugs": {
    "url": "https://github.com/webcoderspeed/theentertainmentconvoy/issues"
  },
  "homepage": "https://github.com/webcoderspeed/theentertainmentconvoy#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.6",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "uuid": "^8.3.2"
